{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        // Best Practices
        "block-scoped-var": 2,
        "eqeqeq": 1,
        "no-alert": 1,
        "no-caller": 1,
        "no-eval": 1,
        "no-multi-spaces": [2, {"exceptions": { "Property": true, "VariableDeclarator": true, "ImportDeclaration": true}}],
        "vars-on-top": 1,
        "yoda": 2,

        // Node
        "global-require": 2,
        "no-sync": 1,

        // Stylistic
        "array-bracket-spacing": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": 2,
        "comma-spacing": [2, {"before": false, "after": true}],
        "comma-style": [2, "last"],
        "computed-property-spacing": 2,
        "consistent-this": 2,
        "eol-last": 2,
        "func-names": 1,
        "indent": [2, 2],
        "jsx-quotes": 2,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "lines-around-comment": 2,
        "max-depth": 1,
        "max-nested-callbacks": 1,
        "max-params": [1, 4],
        "max-len": [1, {"code": 120, "tabWidth": 2, "comments": 100}],
        "max-statements": 1,
        "new-cap": 2,
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-multiple-empty-lines": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "object-curly-newline": 0,
        "object-curly-spacing": 0,
        "one-var-declaration-per-line": 2,
        "space-in-parens": 2,
        "quotes": [1, "single"],

        // es6
        "arrow-body-style": [2, "always"],
        "arrow-parens": 2,
        "arrow-spacing": 2,
        "no-var": 1
    }
}